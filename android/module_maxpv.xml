<?xml version="1.0" encoding="UTF-8"?>
<project name="module_maxpv" default="compile.module.maxpv">
  <dirname property="module.maxpv.basedir" file="${ant.file.module_maxpv}"/>
  
  <property name="module.jdk.home.maxpv" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.maxpv" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.maxpv" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.maxpv" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="maxpv.output.dir" value="${module.maxpv.basedir}/out/production/MaxPV"/>
  <property name="maxpv.testoutput.dir" value="${module.maxpv.basedir}/out/test/MaxPV"/>
  
  <path id="maxpv.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="maxpv.module.production.classpath">
    <path refid="${module.jdk.classpath.maxpv}"/>
  </path>
  
  <path id="maxpv.runtime.production.module.classpath">
    <pathelement location="${maxpv.output.dir}"/>
  </path>
  
  <path id="maxpv.module.classpath">
    <path refid="${module.jdk.classpath.maxpv}"/>
    <pathelement location="${maxpv.output.dir}"/>
  </path>
  
  <path id="maxpv.runtime.module.classpath">
    <pathelement location="${maxpv.testoutput.dir}"/>
    <pathelement location="${maxpv.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.maxpv">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.maxpv">
    <patternset refid="excluded.from.module.maxpv"/>
  </patternset>
  
  <path id="maxpv.module.sourcepath">
    <dirset dir="${module.maxpv.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.maxpv" depends="compile.module.maxpv.production,compile.module.maxpv.tests" description="Compile module MaxPV"/>
  
  <target name="compile.module.maxpv.production" depends="register.custom.compilers" description="Compile module MaxPV; production classes">
    <mkdir dir="${maxpv.output.dir}"/>
    <javac2 destdir="${maxpv.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.maxpv}/javac">
      <compilerarg line="${compiler.args.maxpv}"/>
      <bootclasspath refid="maxpv.module.bootclasspath"/>
      <classpath refid="maxpv.module.production.classpath"/>
      <src refid="maxpv.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.maxpv"/>
    </javac2>
    
    <copy todir="${maxpv.output.dir}">
      <fileset dir="${module.maxpv.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.maxpv.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.maxpv.tests" depends="register.custom.compilers,compile.module.maxpv.production" description="compile module MaxPV; test classes" unless="skip.tests"/>
  
  <target name="clean.module.maxpv" description="cleanup module">
    <delete dir="${maxpv.output.dir}"/>
    <delete dir="${maxpv.testoutput.dir}"/>
  </target>
</project>